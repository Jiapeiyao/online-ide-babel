{
    "rules": {
        "adjacent-overload-signatures": true,
        "no-any": true,
        "curly": true,
        "quotemark": [true, "single", "jsx-double"],
        "no-import-side-effect": [true, {"ignore-module": "(\\.html|\\.css|\\.less|\\.json)$"}],
        "no-parameter-reassignment": true,
        "no-reference": true,
        "no-unnecessary-type-assertion": true,
        "no-var-requires": true,
        "promise-function-async": true,
        "typedef": [true, "parameter", "property-declaration", "member-variable-declaration"],
        "unified-signatures": true,
        "await-promise": [true, "Thenable"],
        "ban-comma-operator": true,
        "ban": [
            true, {
                "name": "useIntl",
                "message": "use safeI18n instead"
            }
        ],
        "function-constructor": true,
        "label-position": true,
        "import-blacklist": [true, "rxjs", "lodash", "jquery"],
        "no-arg": true,
        "no-async-without-await": true,
        "no-conditional-assignment": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-duplicate-variable": [true, "check-parameters"],
        "no-dynamic-delete": true,
        "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
        "no-eval": true,
        "no-floating-promises": true,
        "no-for-in-array": true,
        "no-for-in": true,
        "no-implicit-dependencies": [true, "dev"],
        "no-inferred-empty-object-type": true,
        "no-invalid-template-strings": true,
        "no-invalid-this": [true, "check-function-in-method"],
        "no-misused-new": true,
        "no-object-literal-type-assertion": [true],
        "no-promise-as-boolean": true,
        "no-return-await": true,
        "no-shadowed-variable": [
            true,
            {
              "class": true,
              "enum": true,
              "function": true,
              "import": true,
              "interface": false,
              "namespace": true,
              "typeAlias": false,
              "typeParameter": false,
              "underscore": false
            }
        ],
        "no-string-literal": true,
        "no-sparse-arrays": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-tautology-expression": true,
        "no-this-assignment": [true, {"allowed-names": ["^self$"], "allow-destructuring": true}]
    }
}